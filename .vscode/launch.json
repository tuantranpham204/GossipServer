{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "rdbg",
      "name": "Debug Rails (Edge)",
      "request": "launch",
      "script": "bin/rails",
      "args": ["server"],
      "useBundler": true,
      "env": {
        "RAILS_ENV": "development"
      },
      "serverReadyAction": {
        "action": "debugWithEdge",
        "pattern": "Listening on .* (https?://[a-z0-9\\-]+:[0-9]+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      }
    },
